{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "https://savoy-smash.pxslip.com/schemas/measurement.schema.json",
	"title": "Measurement",
	"description": "Measurements used on this site",
	"type": "object",
	"required": ["name", "equivalence"],
	"properties": {
		"name": {
			"type": "string"
		},
		"notes": {
			"type": "string"
		},
		"equivalence": {
			"type": "number",
			"description": "a number describing this measurements value in ounces"
		},
		"unit": {
			"type": ["string"]
		}
	}
}
